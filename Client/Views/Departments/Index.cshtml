    <div class="row">
        <div class="col-12">

            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Data Table</h4>
                    <h6 class="card-subtitle">Data table example</h6>
                    <div class="col-md-6 col-4 align-self-center">
                        <span data-toggle="modal" data-target="#myModal" onclick="ClearScreen();">
                            <button class="btn pull-left hidden-sm-down btn-success" data-placement="right" data-toggle="tooltip" title="Add Department"><i class="mdi mdi-plus-circle"></i></button>
                        </span>
                    </div>
                    <div class="modal fade" id="myModal" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>
                                <div class="modal-body">
                                    <div class="container">
                                        <form>
                                            <div class="form-group">
                                                <input type="text" class="form-control" id="Id" name="Id" hidden>
                                            </div>
                                            <div class="form-group">
                                                <label for="Email">Department Name:</label>
                                                <input type="text" class="form-control" id="Name" placeholder="Enter Department" name="Name">
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-success" data-dismiss="modal" id="Save" onclick="Save();">Insert</button>
                                    <button type="button" class="btn btn-warning" data-dismiss="modal" id="Update" onclick="Update();">Update</button>
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive m-t-40">
                        <table id="Department" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Create Date</th>
                                    <th>Update Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
